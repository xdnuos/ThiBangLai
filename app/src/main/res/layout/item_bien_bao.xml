<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_line">
                <ImageView
                    android:id="@+id/ITBB_ivBienBao"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ITBB_tvTenBien"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Biển: "
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ITBB_ivBienBao"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:maxLength="110"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:id="@+id/ITBB_tvNoiDung"
                    android:text="Nội dung: "
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ITBB_ivBienBao"
                    app:layout_constraintTop_toBottomOf="@+id/ITBB_tvTenBien" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>


