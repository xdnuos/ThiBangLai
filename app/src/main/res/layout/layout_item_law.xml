<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/shape_item_law_pentally"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_name_pentaly"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:text="Không chấp hành hiệu lệnh, chỉ dẫn của biển báo hiệu, vạch kẻ đường"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/money_pentally"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:text="Phạt tiền từ 100.000 đến 200.000vnđ"
        android:textColor="#FF0000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/present_detail"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:text="Xem chi tiết"
        android:textColor="#1D98BF"
        android:textStyle="italic"
        android:layout_height="wrap_content"/>
</LinearLayout>